/* components/addForm/addForm.wxss */
.item{
  font-size: 30rpx;
  margin: 0 20rpx;
  border-bottom: 1px solid #ccc;
  line-height: 120rpx;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.item-textarea{
  min-height: 120rpx;
  line-height: 120rpx;
  align-items: center;
  height: auto;
  font-size: 30rpx;
  margin: 0 20rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #ccc;
  display: flex;
  flex-direction: row;
  overflow: auto;
}

.item-imgs{
  display: inline-block;
  width: 43%;
  margin: 20rpx 20rpx;
  border: 1rpx solid #ccc;
  height: 300rpx;
}

.item:last-child {
  border-bottom: 0;
}

.itemTitle {
  width: 20%;
  font-weight: bold;
  align-items: center;
}

.mas {
  width: 80%;
  align-items: center;
  line-height: 40rpx;
}
.textarea{
  width: 80%;
}
.item button {
  width: 100%;
  color: white;
  background-color: #99ccb6;
}