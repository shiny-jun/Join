/* components/form/form.wxss */
.item {
  font-size: 30rpx;
  margin: 0 20rpx;
  border-bottom: 1px solid #ccc;
  line-height: 120rpx;
  min-height: 120rpx;
  height: auto;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.item_tips{
  border-bottom: none;
  font-size: 26rpx;
  margin: 20rpx 20rpx;
  line-height: 60rpx;
  display: block;
}

.item:last-child {
  border-bottom: 0;
}

.itemTitle {
  width: 20%;
  font-weight: bold;
  align-items: center;
}

.mas {
  width: 80%;
  align-items: center;
  line-height: 40rpx;
}

.tips{
  align-items: center;
  line-height: 40rpx;
}

button {
  width: 100%;
  color: white;
  background-color: #99ccb6;
}