/* pages/me/me.wxss */
page {
  background-color: #e8e8ed;
  min-height:100%;
}
.content{
  background-color: #e8e8ed;
  height: 100%;
  width: 100%;
}
.bg{
  width: 100%;
  height: 300rpx;
  background-color: #99ccb6;
}
.head{
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 300rpx;
}
.headIcon{
  margin: 40rpx;
}
.headIcon image{
  border-radius: 100rpx;
}
.login{
  color: #fff;
  font-size: 30rpx;
  font-weight: bold;
  margin-right: 80rpx;
}
.uaerName{
  background-color:transparent;
  color: white;
}

button[class="uaerName"]::after {
  border: 0;
} 

.right{
  position: absolute;
  right: 20rpx;
}
.hr{
  width: 100%;
  height: 30rpx;
}

.count{
  font-size: 30rpx;
  color: #ff0000;
  width:43%;
  text-align:right;
  padding-right: 80rpx;
}